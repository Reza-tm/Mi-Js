{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "DOM"],
    "removeComments": true,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
